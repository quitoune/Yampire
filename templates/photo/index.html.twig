{% extends 'base.html.twig' %}

{% block title %}Photos{% endblock %}

{% block body %}
    <div class="card text-center">
        <div class="card-header text-left">
            {{ pagination.total }} photos - {{ pagination.page }} / {{ pagination.nbPages }}
        </div>
        <div class="card-body">
        	<div class="row">
        		{% for photo in photos %}
                    <div class="col-img">
						<a href="{{ path('photo_afficher', {'id':photo.id, 'page':pagination.page}) }}">
                            {{ photo(photo) | raw }}
                        </a>
                    </div>
                {% endfor %}
        	</div>
            {% if photos is empty %}
    	        <p class="text-info text-center">Il  n'y a aucune photo correspondant Ã  la recherche.</p>
            {% endif %}
        </div>
        <div class="card-footer text-muted">
            {% include 'outils/pagination.html.twig' %}
        </div>
    </div>
{% endblock %}
