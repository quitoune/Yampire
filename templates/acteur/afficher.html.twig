{% extends 'base.html.twig' %}

{% block title %}
    {% if acteur.sexe %}Actrice{% else %}Acteur{% endif %} - {{ nom_acteur(acteur) }}
{% endblock %}

{% block body %}
    
    <div class="card">
        <div class="card-header text-left">
        	<ul class="nav nav-tabs card-header-tabs" id="first">
      			<li class="nav-item">
        			<div class="nav-link active" data-link="{{ path('ajax_afficher_acteur_fiche', {'id':acteur.id, 'page':page}) }}">Infos</div>
      			</li>
      			<li class="nav-item">
        			<div class="nav-link" data-link="{{ path('ajax_afficher_notes', {'id':acteur.id, 'type':'acteur'}) }}">Notes</div>
      			</li>
      			<li class="nav-item">
        			<div class="nav-link" data-link="{{ path('ajax_afficher_photos', {'id':acteur.id, 'type':'acteur'}) }}">Photos</div>
      			</li>
    		</ul>
        </div>
        <div class="card-body text-center" id="bloc_acteur">
        	Chargement...
        </div>
    </div>
    
    <div class="modal" tabindex="-1" role="dialog" id="bloc_modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content" id ="modal_acteur">
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/pagination.js') }}"></script>
    <script src="{{ asset('js/tabs.js') }}"></script>
    
    <script type="text/javascript">
        $( document ).ready(function() {
        	chargerTabs("{{ path('ajax_afficher_acteur_fiche', {'id':acteur.id, 'page': page}) }}", '#bloc_acteur');
            Pagination.demarrer();

            $(".card .nav-link").click(function(){
            	$(".card .nav-link").removeClass('active');
            	$(this).addClass('active');
            	chargerTabs($(this).data('link'), '#bloc_acteur');
            });
        });
    </script>
{% endblock %}