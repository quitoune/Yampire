<div id="test_quizz">
    <div class="modal-header">
        <h5 class="modal-title">
            Cr√©ation d'une question
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    
    <div class="modal-body">
        <div class="row">
        	<div class="col col-xs-6">
        		<div class="form-group">
        			<label for="question_type_question" class="required">Type de question</label>
        			{{ selectTypeQuestion("question[type_question]", "question_type_question") | raw }}
        		</div>
        	</div>
            <div class="col col-xs-6">
            	<div class="form-group">
            		<label for="question_type_proposition">Type de proposition</label>
        			{{ selectTypeProposition("question[type_proposition]", "question_type_proposition") | raw }}
            	</div>
            </div>
    	</div>
    </div>
    
    <div class="modal-footer">
        <button class="btn btn-primary"> Ajouter </button>
    </div>
</div>

{% block javascripts %}
    <script>
        $('#bloc_modal').modal({
            'show' : true,
            'backdrop' : 'static'
        });
    </script>
{% endblock %}