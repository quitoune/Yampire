<div class="card" id="ajax_{{ type }}_citation_see">
	<div class="card-header">
		<div class=" float-left">
    	    {{ pagination.nb_elements }} citation{% if pagination.nb_elements > 1 %}s{% endif %} {% if pagination.pages_count > 0 %} - Page {{ pagination.page }} / {{ pagination.pages_count }} {% endif %}
    	</div>
    </div>
    <div class="card-body">
		<table class="table table-striped table-light table-sm">
            	<tr>
            		<th>ID</th>
            		<th>Citation</th>
            		{% if type != 'episode' %}
            			<th>Episode</th>
            		{% endif %}
            		{% if type != 'personnage' %}
            			<th>Auteur</th>
            		{% endif %}
            		<th>Destinataire(s)</th>
            	</tr>
                {% for citation in citations %}
                    <tr>
                    	<td>{{ citation.id }}</td>
                		<td width="50%">{{ citation.texte }}</td>
                		{% if type != 'episode' %}
                			{% if type == 'personnage' %}
                				<td>{{ citation.episode.titreOriginal }} {{ codeEpisode(citation.episode) }}</td>
                			{% else %}
                				<td>{{ citation.episode.titreOriginal }} {{ codeEpisode(citation.episode, 0) }}</td>
                			{% endif %}
                		{% endif %}
                		{% if type != 'personnage' %}
                			<td>{{ nom_usage(citation.fromPersonnage) }}</td>
                		{% endif %}
                		<td>{{ destinataires(citation) }}</td>
            		</tr>
            	{% endfor %}
            </table>
            
            {% if citations is empty %}
              	<p class="text-info text-center">Aucune citation n'est associé à
                    {% if type == 'episode' %}
                    	cet épisode.
                    {% elseif type == 'serie' or type == 'saison' %}
                        cette {{ type }}.
                    {% else %}
                        ce {{ type }}.
                    {% endif %}
                </p>
        {% endif %}
	</div>
	
	<div class="card-footer">
    	{% include 'outils/ajax_pagination.html.twig' %}
    </div>
</div>