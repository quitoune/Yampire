<div class="card" id="ajax_{{ type }}_citation_see">
	<div class="card-header text-left">
	    {{ pagination.nb_elements }} citation{% if pagination.nb_elements > 1 %}s{% endif %} {% if pagination.pages_count > 0 %} - Page {{ pagination.page }} / {{ pagination.pages_count }} {% endif %}
	    {% if is_granted("ROLE_ADMIN") %}
            {{ ajouter(path('citation_ajouter', {'slug':objet.slug, 'page':pagination.page})) | raw }}
        {% endif %}
    </div>
    <div class="card-body">
    	<div class="row">
		    {% for citation in citations %}
    			<div class="col-quotes">
    			    {{ card_citation(citation, true, path('citation_afficher', {'id':citation.id, 'slug':citation.episode.serie.slug, 'page':pagination.page})) | raw }}
    			</div>
            {% endfor %}
		</div>
        {% if citations is empty %}
          	<p class="text-info text-center">Aucune citation n'est associé à
                {% if type == 'episode' %}
                	cet épisode.
                {% elseif type == 'serie' or type == 'saison' %}
                    cette {{ type }}.
                {% else %}
                    ce {{ type }}.
                {% endif %}
            </p>
        {% endif %}
	</div>
	
	<div class="card-footer">
    	{% include 'outils/ajax_pagination.html.twig' %}
    </div>
</div>