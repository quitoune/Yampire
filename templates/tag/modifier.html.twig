{% extends 'base.html.twig' %}

{% block title %} {% trans %}tag.nom{% endtrans %} - ID {{ tag.id }} {% endblock %}

{% block body %}
    
    <div class="card">
        {{ form_start(form) }}
		<div class="card-header">
			Edition de {{ tag.nom }} - ID {{ tag.id }}
		</div>
        
        <div class="card-body">
        	<div class="row">
        		<div class="col col-md-6 col-12">{{ form_row(form.nom) }}</div>
            </div>
        </div>
        <div class="card-footer text-center">
            {{ form_row(form.save) }}
        </div>
        {{ form_rest(form) }}
        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
    
{% endblock %}
