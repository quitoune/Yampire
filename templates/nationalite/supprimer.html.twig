<div class="modal-header">
	<h5 class="modal-title">Suppression</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    Voulez-vous vraiment supprimer la nationalit√© {{ nationalite.nomFeminin }} ?
</div>

<div class="modal-footer">
    <button id="annuler" class="btn btn-dark">Annuler</button>
    <button id="confirmer" class="btn btn-yampire">Confirmer</button>
</div>

{% block javascripts %}
    <script type="text/javascript">
		$('#bloc_modal').modal({
            'show' : true,
            'backdrop' : 'static'
        });

		$("#annuler").click(function(){
			$('#bloc_modal').modal('hide');
		});

        var url = "{{ path('nationalite_supprimer', { 'id':nationalite.id }) }}";
        var url_base = "{{ path('nationalite_liste') }}";
		saveModal("#confirmer", url, url_base);
    </script>
{% endblock %}