{% extends 'base.html.twig' %}

{% block title %} Personnage - ID {{ personnage.id }} {% endblock %}

{% block body %}
    
    <div class="card">
        <div class="card-header text-left">
        	<ul class="nav nav-tabs card-header-tabs" id="first">
        	<li class="nav-item">
        			<div class="nav-link active" data-link="{{ path('ajax_afficher_personnage_fiche', {'slug_perso':personnage.slug, 'slug':serie.slug, 'page':page}) }}">Infos</div>
      			</li>
      			<li class="nav-item">
        			<div class="nav-link" data-link="{{ path('personnage_afficher_episodes', {'id':personnage.id}) }}">Episodes</div>
      			</li>
      			<li class="nav-item">
        			<div class="nav-link" data-link="{{ path('ajax_afficher_citations', {'id':personnage.id, 'type':'personnage'}) }}">Citations</div>
      			</li>
      			<li class="nav-item">
        			<div class="nav-link" data-link="{{ path('ajax_afficher_notes', {'id':personnage.id, 'type':'personnage'}) }}">Notes</div>
      			</li>
    		</ul>
        </div>
        <div class="card-body text-center" id="bloc_personnage">
            Chargement...
        </div>
    </div>
    
    <div class="modal" tabindex="-1" role="dialog" id="bloc_modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content" id ="modal_personnage">
            </div>
        </div>
    </div>
    
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/pagination.js') }}"></script>
    <script src="{{ asset('js/tabs.js') }}"></script>
    
    <script type="text/javascript">
        $( document ).ready(function() {
        	chargerTabs("{{ path('ajax_afficher_personnage_fiche', {'slug_perso':personnage.slug, 'slug':serie.slug, 'page':page}) }}", '#bloc_personnage');
            Pagination.demarrer();

            $(".card .nav-link").click(function(){
            	$(".card .nav-link").removeClass('active');
            	$(this).addClass('active');
            	chargerTabs($(this).data('link'), '#bloc_personnage');
            });
        });
    </script>
{% endblock %}