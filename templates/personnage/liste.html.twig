{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block body %}
    <div class="card text-center">
        <div class="card-header text-left">
            {{ pagination.total }} personnages - {{ pagination.page }} / {{ pagination.nbPages }}
        </div>
        <div class="card-body">
                <div class="row">
                	{% for personnage in personnages %}
                		<div class="col-img">
                			<a href="{{ path('personnage_afficher', {'slug_perso':personnage.slug, 'slug':serie.slug, 'page':pagination.page}) }}">
                    			{% if personnage.photo is not null %}
        							{{ photo(personnage) | raw }}
        						{% else %}
                                    <span class="center">{{ nom_complet(personnage) }}</span>
        	                    {% endif %}
    	                    </a>
                		</div>
                	{% endfor %}
                </div>
                
                {% if personnages is empty %}
                    <p class="text-info text-center">Il  n'y a aucun personnage correspondant Ã  la recherche.</p>
                {% endif %}
            </div>
        <div class="card-footer text-muted">
        {% include 'outils/pagination.html.twig' %}
        </div>
    </div> 
{% endblock %}
