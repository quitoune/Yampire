<div class="row">
	<div class="col col-3 center_img">
	    {% if serie.photo is not null %}
        	{{ photo(serie) | raw }}
        {% endif %}
	</div>
	<div class="col col-9 center_img">
	    {{ form_start(form) }}
        <table class="table table-sm">
            <tr>
        		<th>{{ form_label(form.titre) }}</th>
        		<td>{{ form_errors(form.titre) }} {{ form_widget(form.titre) }} {{ form_help(form.titre) }}</td>
        	</tr>
            <tr>
        		<th>{{ form_label(form.titre_original) }}</th>
        		<td>{{ form_errors(form.titre_original) }} {{ form_widget(form.titre_original) }} {{ form_help(form.titre_original) }}</td>
        	</tr>
        	<tr>
        		<th>{{ form_label(form.titre_court) }}</th>
        		<td>{{ form_errors(form.titre_court) }} {{ form_widget(form.titre_court) }} {{ form_help(form.titre_court) }}</td>
        	</tr>
        	<tr>
        		<th>{{ form_label(form.nombre_saison) }}</th>
        		<td>{{ form_errors(form.nombre_saison) }} {{ form_widget(form.nombre_saison) }} {{ form_help(form.nombre_saison) }}</td>
        	</tr>
        	<tr>
        		<th>{{ form_label(form.nombre_episode) }}</th>
        		<td>{{ form_errors(form.nombre_episode) }} {{ form_widget(form.nombre_episode) }} {{ form_help(form.nombre_episode) }}</td>
        	</tr>
        	<tr>
        		<th>{{ form_row(form.terminee) }}</th>
        		<td>{{ form_row(form.save) }}</td>
        	</tr>
        </table>
        {{ form_rest(form) }}
        {{ form_errors(form) }}
        {{ form_end(form) }}
	</div>
</div>