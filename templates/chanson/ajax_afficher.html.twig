<div class="card" id="ajax_{{ type }}_chanson_see">
	<div class="card-header">
		<div class=" float-left">
    	    {{ pagination.nb_elements }} chanson{% if pagination.nb_elements > 1 %}s{% endif %} {% if pagination.pages_count > 0 %} - Page {{ pagination.page }} / {{ pagination.pages_count }} {% endif %}
    	</div>
    </div>
    <div class="card-body">
    	<table class="table table-striped table-light table-sm">
        	<tr>
            	<th>ID</th>
                <th>Chanson</th>
                <th>Interprète</th>
                {% if type != 'episode' %}
                	<th>Episode</th>
                {% endif %}
            </tr>
            {% for chanson in chansons %}
            	<tr>
                	<td>{{ chanson.id }}</td>
                    <td>{{ chanson.titre }}</td>
                    <td>{{ chanson.interprete }}</td>
                    {% if type != 'episode' %}
                    	<td>{{ chanson.episode.titreOriginal }} {{ codeEpisode(chanson.episode, 0) }}</td>
                    {% endif %}
                </tr>
            {% endfor %}
		</table>
		{% if chansons is empty %}
          	<p class="text-info text-center">Aucune chanson n'est associé à
                {% if type == 'episode' %}
                	cet épisode.
                {% elseif type == 'serie' or type == 'saison' %}
                    cette {{ type }}.
                {% else %}
                    ce {{ type }}.
                {% endif %}
            </p>
        {% endif %}
	</div>
	
	<div class="card-footer">
    	{% include 'outils/ajax_pagination.html.twig' %}
    </div>
</div>