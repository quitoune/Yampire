{% extends 'base.html.twig' %}

{% block title %} Chanson - Ajout {% endblock %}

{% block body %}
    
    <div class="card">
        {{ form_start(form) }}
		<div class="card-header">
			Ajout d'une chanson
		</div>
        
        <div class="card-body">
        	<div class="row">
            	<div class="col-lg-6 col-md-6 col-12">
            		{{ form_row(form.titre) }}
            	</div>
            	<div class="col-lg-6 col-md-6 col-12">
            		{{ form_row(form.interprete) }}
            	</div>
            </div>
            <div class="row">
            	<div class="col-lg-6 col-md-6 col-12 w-100">
            		{{ form_row(form.episode) }}
            	</div>
            </div>
            <div class="row">
            	<div class="col-lg-12 col-md-12 col-12">
            		{{ form_row(form.evenement) }}
            	</div>
            </div>
        </div>
        
        <div class="card-footer text-center">
            {{ form_row(form.save) }}
        </div>
        {{ form_rest(form) }}
        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
    
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $( document ).ready(function() {
			$("#chanson_episode").select2();
        });
    </script>
{% endblock %}
