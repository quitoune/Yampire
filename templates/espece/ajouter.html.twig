{% extends 'base.html.twig' %}

{% block title %} Espèce - Ajout {% endblock %}

{% block body %}
    
    <div class="card">
        {{ form_start(form) }}
		<div class="card-header">
			Ajout d'une espèce
		</div>
        
        <div class="card-body">
        	<div class="row">
        		<div class="col col-md-6 col-12">{{ form_row(form.nom) }}</div>
            	<div class="col col-md-6 col-12">{{ form_row(form.info_sup) }}</div>
            </div>
            <div class="row">
        		<div class="col col-md-6 col-12">{{ form_row(form.pouvoirs) }}</div>
        		<div class="col col-md-6 col-12">{{ form_row(form.faiblesses) }}</div>
            </div>
        </div>
        <div class="card-footer text-center">
            {{ form_row(form.save) }}
        </div>
        {{ form_rest(form) }}
        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
    
{% endblock %}
