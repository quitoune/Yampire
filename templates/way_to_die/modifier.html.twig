{% extends 'base.html.twig' %}

{% block title %} Façon de mourir - ID {{ way_to_die.id }} {% endblock %}

{% block body %}
    
    <div class="card">
        {{ form_start(form) }}
		<div class="card-header">
			Edition de la façon de mourir {{ way_to_die.nom }} ID {{ way_to_die.id }}
		</div>
        
        <div class="card-body">
        	<div class="row">
            	<div class="col col-md-6 col-12">
                	<div class="form-group">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom) }}
                    
                        <small>{{ form_help(form.nom) }}</small>
                    
                        <div class="form-error">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            {{ form_row(form.save) }}
        </div>
        {{ form_rest(form) }}
        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
    
{% endblock %}
